<Window x:Class="Tester2_01_GUI.StudentNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод данных студента" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Перед началом теста" 
                      FontSize="20" 
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>
            
            <TextBlock Text="Пожалуйста, представьтесь:" 
                      FontSize="14"
                      Margin="0,0,0,10"/>
            
            <TextBox x:Name="StudentNameTextBox" 
                    Height="35" 
                    FontSize="14"
                    Margin="0,0,0,15"
                    Text="Студент"
                    ToolTip="Введите ваше имя и фамилию"
                    KeyDown="StudentNameTextBox_KeyDown"/>
            
            <GroupBox Header="Информация о тесте" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock x:Name="TestInfoTextBlock" 
                              FontSize="12" 
                              TextWrapping="Wrap"/>
                </StackPanel>
            </GroupBox>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="StartTestButton"
                        Content="✅ Начать тест" 
                        Width="120" 
                        Height="35"
                        Background="#32CD32" 
                        Foreground="White"
                        FontWeight="Bold"
                        Click="StartTestButton_Click"
                        Margin="0,0,10,0"/>
                
                <Button x:Name="CancelButton"
                        Content="❌ Отмена" 
                        Width="120" 
                        Height="35"
                        Background="#DC143C" 
                        Foreground="White"
                        FontWeight="Bold"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>